<Window x:Class="De02.Window2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:De02"
        mc:Ignorable="d"
        Title="Window2" Height="450" Width="800"
        Loaded="window_loaded"
        >
    <Grid>
        <DataGrid x:Name="dgData" HorizontalAlignment="Left" Height="305" Margin="76,54,0,0" VerticalAlignment="Top" Width="654" CanUserAddRows="False" AutoGenerateColumns="False" AlternatingRowBackground="AliceBlue">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Mã phòng" Binding="{Binding MaPhong}" Width="*"/>
                <DataGridTextColumn Header="Tên phòng" Binding="{Binding TenPhong}" Width="*"/>
                <DataGridTextColumn Header="Số lượng nv" Binding="{Binding SLNV}" Width="*"/>
                <DataGridTextColumn Header="Tổng lương" Binding="{Binding TongLuong}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Window>
