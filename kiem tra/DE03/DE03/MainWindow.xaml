<Window x:Class="DE03.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DE03"
        mc:Ignorable="d"
        Title="MainWindow" Height="552" Width="800">
    <Grid Background="LightYellow" Margin="0,0,0,-6">
        <Label Content="CHƯƠNG TRÌNH TÍNH TIỀN ĐIỆN" HorizontalAlignment="Left" Height="43" Margin="155,10,0,0" VerticalAlignment="Top" Width="418" FontWeight="Bold" FontSize="20"/>
