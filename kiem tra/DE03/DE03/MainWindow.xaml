        <Button x:Name="btnDetail" Content="Chi tiết" HorizontalAlignment="Center" Margin="0,472,0,0" VerticalAlignment="Top" Click="btnDetail_Click"/>
        <Button x:Name="btnClose" Content="Đóng" HorizontalAlignment="Left" Margin="543,472,0,0" VerticalAlignment="Top" Click="btnClose_Click"/>
        <Label x:Name="lbMessage" Foreground="Red" Content="" HorizontalAlignment="Left" Height="166" Margin="364,58,0,0" VerticalAlignment="Top" Width="402"/>


    </Grid>
</Window>
