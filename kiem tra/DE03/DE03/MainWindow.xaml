        <Label Content="Địa chỉ" HorizontalAlignment="Left" Margin="47,101,0,0" VerticalAlignment="Top"/>
        <Label Content="Số điện dùng" HorizontalAlignment="Left" Margin="47,149,0,0" VerticalAlignment="Top"/>
        <Label Content="Ngày tháng" HorizontalAlignment="Left" Margin="47,198,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtName" HorizontalAlignment="Left" Margin="175,55,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="153" Height="21"/>
        <TextBox x:Name="txtElectrolic" HorizontalAlignment="Left" Margin="175,153,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="153" Height="22"/>
